<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:id="@+id/relLay"
    android:layout_height="match_parent"
    android:background="#000000"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="me.ravitripathi.blaze.LoginActivity">


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/background"

        android:src="@drawable/common_full_open_on_phone"
        android:alpha="0.1"
        />


    <com.google.android.gms.common.SignInButton

        android:id="@+id/google"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="49dp" />


    <TextView
        android:layout_width="match_parent"
        android:text="Or"
        android:id="@+id/or"
        android:layout_marginTop="5dp"
        android:textAlignment="center"
        android:layout_below="@id/google"
        android:layout_height="wrap_content" />

    <EditText
        android:textColor="#FFFFFF"
        android:textColorHint="#FFFFFF"
        android:shadowColor="@color/cardview_light_background"
        android:layout_below="@id/or"
        android:layout_margin="15dp"
        android:id="@+id/phone"
        android:hint="Enter phone number"
        android:inputType="phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/submit"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Submit Phone Number"
        android:layout_below="@id/phone"
        />

    <LinearLayout
        android:id="@+id/veri"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_below="@id/submit"
        android:layout_height="wrap_content">

        <EditText
            android:layout_width="0dp"
            android:layout_weight="1"
            android:id="@+id/code"
            android:textColor="#FFFFFF"
            android:textColorHint="#FFFFFF"
            android:hint="Enter code"
            android:shadowColor="@color/cardview_light_background"
            android:layout_height="wrap_content" />

        <Button
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="Submit"
            android:id="@+id/veriB"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/animation_view"
        android:visibility="gone"
        android:layout_below="@id/veri"
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        app:lottie_fileName="sms_passcode.json"
        app:lottie_loop="true"
        app:lottie_autoPlay="true" />


    <ImageView
        android:id="@+id/next"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@id/animation_view"
        android:src="@drawable/play"
        />
</RelativeLayout>

